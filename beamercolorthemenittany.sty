\setbeamerfont{title}{size=\Huge}
\setbeamerfont{subtitle}{size=\large}

\definecolor{nittany-navy}{RGB}{0, 30, 68}
\definecolor{beaver-blue}{RGB}{30, 64, 124}
\definecolor{white-out}{RGB}{255, 255, 255}
\definecolor{pugh-blue}{RGB}{150, 190, 230}

\setbeamercolor{palette primary}{fg=white,bg=beaver-blue}
\setbeamercolor{palette secondary}{fg=nittany-navy,bg=white}
\setbeamercolor{palette tertiary}{fg=white,bg=pugh-blue}
\setbeamercolor{palette quaternary}{fg=white,bg=nittany-navy}
 
\setbeamercolor*{itemize item}{fg=beaver-blue}
\setbeamercolor*{itemize subitem}{fg=beaver-blue}
\setbeamercolor*{normal text}{fg=black}

\setbeamercolor{title}{parent=palette primary}
\setbeamercolor{subtitle}{parent=palette secondary}
\setbeamercolor{author}{parent=palette tertiary}
\setbeamercolor{institute}{parent=palette primary}